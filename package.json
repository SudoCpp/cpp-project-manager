{
	"name": "cpp-project-manager",
	"displayName": "C++ Project Manager",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:cppTree"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": 
		[
			{
				"command": "initializeWorkspace",
				"title": "C++ Project Manager: Initialize Workspace",
				"icon": "$(files)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "initializeWorkspace",
					"group": "navigation"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "cppTree",
					"name": "C++ Project Manager"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
